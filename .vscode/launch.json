// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch (Auto)",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--disable-extensions",
        "${workspaceRoot}/vscode/test-workspaces/auto-install"
      ],
      "outFiles": [
        "${workspaceRoot}/dist/bfa_vscode.bc.js",
        "${workspaceRoot}/dist/bfa_vscode.bc.js.map"
      ],
      "autoAttachChildProcesses": true,
      "preLaunchTask": {
        "type": "npm",
        "script": "compile-all",
      }
    },
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch (Local)",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--disable-extensions",
        "${workspaceRoot}/vscode/test-workspaces/local-install"
      ],
      "outFiles": [
        "${workspaceRoot}/dist/bfa_vscode.bc.js",
        "${workspaceRoot}/dist/bfa_vscode.bc.js.map"
      ],
      "autoAttachChildProcesses": true,
      "preLaunchTask": {
        "type": "npm",
        "script": "compile-all",
      }
    }
  ]
}